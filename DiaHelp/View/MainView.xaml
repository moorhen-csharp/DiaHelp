<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiaHelp.View.MainView"
             Title="MainView">
    <Grid RowDefinitions="*,Auto" >
        <Grid Grid.Row="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition/>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
        
       
            <Label Text="Расчет коррекционного инсулина" TextColor="DimGray" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" Margin="0,10,0,20"/>

            <Border Grid.Row="1" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="6">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    
                    <Label Text="Текущий уровень глюкозы:" FontSize="14" VerticalOptions="Center" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" Margin="10"/>
                    <Entry Text="{Binding CurrentGlucose}" Keyboard="Numeric"  FontSize="14" Grid.Row="0" Grid.Column="7" HorizontalTextAlignment="Center" HeightRequest="60" />

                    <Label Text="Целевой уровень глюкозы:" FontSize="14" VerticalOptions="Center" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="6" Margin="10"/>
                    <Entry Text="{Binding TargetGlucose}" Keyboard="Numeric"  FontSize="14"  Grid.Row="1" Grid.Column="7" HorizontalTextAlignment="Center" HeightRequest="60" />

                    <Label Text="Коэффициент инсулина:" FontSize="14" VerticalOptions="Center"  Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="6" Margin="10"/>
                    <Entry Text="{Binding ISF}" Keyboard="Numeric"  FontSize="14"   Grid.Row="2" Grid.Column="7" HorizontalTextAlignment="Center" HeightRequest="60"  />
                </Grid>
            </Border>
            
           

          
            <Button Text="Рассчитать" FontSize="14" FontAttributes="Bold" TextColor="White" WidthRequest="150" HeightRequest="40" HorizontalOptions="Center" Grid.Row="4" Grid.ColumnSpan="6" Margin="5" Command="{Binding CalculateCommand}"/>

            <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="6">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    
                    <Label Text="Коррекционный инсулин:" FontSize="17" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" Margin="10" VerticalOptions="Center"/>
                    <Label Text="{Binding Result}" FontSize="16" FontAttributes="Bold" HorizontalOptions="Start" VerticalOptions="Center"  Grid.Row="0" Grid.Column="6" Grid.ColumnSpan="3" Margin="5"/>
                    
                </Grid>
            </Border>
        </Grid>

        <!-- NAVBAR -->
        <Grid Grid.Row="1" BackgroundColor="BlueViolet" HeightRequest="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ImageButton Source="school.png" BackgroundColor="Transparent" BorderColor="Transparent" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="0"/>

            <Button Text="ХЕ" Command="{Binding BreadUnitCommand}" FontSize="14" TextColor="White" BackgroundColor="Transparent" BorderColor="Transparent" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="1"/>
            
            <ImageButton Source="main.png" BackgroundColor="Transparent" BorderColor="Transparent" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="2"/>

            <ImageButton Source="notes.png" Command="{Binding SugarPageCommand}" BackgroundColor="Transparent" BorderColor="Transparent" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="3"/>

            <ImageButton Source="profile.png" Command="{Binding ProfileCommand}"  BackgroundColor="Transparent" BorderColor="Transparent" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="4"/>
        </Grid>
    </Grid>
</ContentPage>